<Page navigatingTo="onNavigatingTo">
  <ActionBar title="Connexion" />
  
  <StackLayout class="form" padding="20">
    <Image src="~/images/logo.png" height="100" margin="20" />
    
    <TextField hint="Email" text="{{ email }}" 
              keyboardType="email" autocorrect="false"
              autocapitalizationType="none" class="input" />
              
    <TextField hint="Mot de passe" text="{{ password }}" 
              secure="true" class="input" />
              
    <Button text="Se connecter" tap="{{ onLogin }}" 
            class="btn-primary" />
            
    <ActivityIndicator busy="{{ isLoading }}" />
  </StackLayout>
</Page>